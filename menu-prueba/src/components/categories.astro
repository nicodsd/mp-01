---
//import { categories } from '../data/categories'; // Ajusta la ruta según tu estructura

// Simulación de datos si no tienes conexión a base de datos aún
import categories from '../data/categories.js';
---

<section class="mt-3 text-[2vh] font-weight-500">
  <div class="categories-list">
    {
      categories.map((category) => (
        <a href={`/#`} class="category-item">
          {category.name}
        </a>
      ))
    }
  </div>
</section>

<style>
  section::-webkit-scrollbar {
    /* Para navegadores basados en Webkit (Chrome, Safari, Opera) */
      display: none;
    }
    /* Para Firefox */
    .categories-list { 
      scrollbar-width: none; /* Oculta la barra de scroll */
      overflow-y: scroll; /* Mantiene la funcionalidad de desplazamiento */
    }
    
  .categories-list {
    display: flex;
    gap: 1.7rem;
    padding: 1rem 1rem;
  }
  .category-item {
    padding: 0.5rem .4rem;
    text-decoration: none;
    color: #222;
    border-bottom: 3px solid;
    border-color: rgba(255, 0, 0, 0);
    font-weight: 700;
  }
  .category-item:hover {
    border-bottom: 3px solid;
    border-color: rgb(255, 0, 0);
  }
  .category-item:focus {
    border-bottom: 3px solid;
    border-color: rgb(255, 0, 0);
  }
</style>
