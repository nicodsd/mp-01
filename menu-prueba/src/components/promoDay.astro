---
const { imageUrl, title, description, price, bgColor } = Astro.props;
---

<h2
  class="text-left"
  style="margin:0 0 0.4rem 0; font-size:1.4rem; font-weight: 800;"
>
  PROMO DEL D√çA
</h2>
<div
  style={`background:${bgColor || "#f5f5f5"}; border-radius:1rem; overflow:hidden; max-width:full; max-height: 40vh ; box-shadow:0 2px 8px rgba(0,0,0,0.08);`}
>
  <img
    src={imageUrl}
    alt={title}
    style="width:100%; height:180px; object-fit:cover;"
  />
  <div class="flex flex-row items-center" style="padding:1rem; color:#ffffff">
    <div class="flex flex-col text-left " style="">
      <h2 style="font-weight: 800; font-size:1.7rem;">{title}</h2>
      <p style="font-size: 13px;">
        {description}
      </p>
    </div>
    <div class="flex flex-col">
      <p style="font-weight:bold; font-size:1rem; color:#f30505;">Antes ${price}</p>
      <p style="font-weight:bold; font-size:1.2rem; color:#ffffff; font-size:1.8rem; font-weight: 800;">${price}</p>
    </div>
  </div>
</div>
