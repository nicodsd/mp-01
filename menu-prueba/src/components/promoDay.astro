---
const { imageUrl, title, description, price, bgColor } = Astro.props;
---

<h2
  class="text-left"
  style="margin:0.5rem 0 0.2rem 0; font-size:1.4rem; font-weight: 900;"
>
  PROMO DEL D√çA
</h2>
<div
  style={`background:${bgColor || "#f5f5f5"}; border-radius:1rem; overflow:hidden; max-width:full; max-height: 40vh ; box-shadow:0 2px 8px rgba(0,0,0,0.08);`}
>
  <img
    src={imageUrl}
    alt={title}
    style="width:100%; height:180px; object-fit:cover;"
  />
  <div class="flex flex-row items-end" style="padding:1rem; color:#ffffff">
    <div class="flex flex-col text-left " style="">
      <h2 class="text-base/7.5" style="font-weight: 800; font-size:25px;">{title}</h2>
      <p style="font-size: 13px; margin-top:0.2rem;">
        {description}
      </p>
    </div>
    <div class="flex flex-col justify-end items-end w-1/2">
      <p style="font-weight:semibold; font-size:14px; color:#ff4e4e;">Antes ${price}</p>
      <p style="color:#ffffff; font-size:30px; font-weight: 800;">${price}</p>
    </div>
  </div>
</div>
